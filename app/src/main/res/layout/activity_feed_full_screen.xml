<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:orientation="vertical"
    tools:context=".FeedFullScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/topcardview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="-15dp"
            android:background="@drawable/button_bg"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/recentFeedImg"
                android:layout_width="match_parent"
                android:src="@drawable/facebook"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlDetails"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/back_base_transaparent"
                        android:backgroundTint="@color/black"
                        android:drawableStart="@drawable/back_vector"
                        android:drawablePadding="10dp"
                        android:letterSpacing="0.02"
                        android:paddingStart="5dp"
                        android:paddingEnd="10dp"
                        android:text="Back"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="20dp"
                        android:letterSpacing="0.02"
                        android:layout_below="@id/back"
                        android:minLines="2"
                        android:padding="10dp"
                        android:text="Welcome to Sri Amit Bindal Blogs"
                        android:textColor="@color/white"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/dateNewsViews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="15dp"
                        android:layout_below="@id/title"
                        android:letterSpacing="0.02"
                        android:minLines="2"
                        android:padding="10dp"
                        android:text="Welcome to Sri Amit Bindal Blogs"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:letterSpacing="0.02"
            android:minLines="2"
            android:textStyle="bold"
            android:text="Welcome to Sri Amit Bindal Blogs"
            android:textColor="#121212"
            android:textSize="28sp" />
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:id="@+id/recentFeedVideo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/newsBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="fill_horizontal"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.02"
            android:minLines="2"
            android:text="Welcome to Sri Amit Bindal Blogs"
            android:textColor="#434343"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:weightSum="2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@drawable/button_bg"
                android:padding="2dp"
                android:src="@drawable/amit_bindal_intro_pic"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:weightSum="2">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:src="@drawable/amit_bindal_intro_pic"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_bg"
                    android:layout_marginBottom="5dp"
                    tools:ignore="NestedWeights" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/button_bg"
                    android:src="@drawable/amit_bindal_intro_pic"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/newsBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="fill_horizontal"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.02"
            android:minLines="2"
            android:text="Welcome to Sri Amit Bindal Blogs"
            android:textColor="#434343"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/newsTag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NewsTag1"
                android:letterSpacing="0.02"
                android:padding="10dp"
                android:background="@drawable/button_bg"
                android:backgroundTint="#01A8E9"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/newsTag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NewsTag1"
                android:layout_toEndOf="@id/newsTag1"
                android:letterSpacing="0.02"
                android:padding="10dp"
                android:background="@drawable/button_bg"
                android:backgroundTint="#01A8E9"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/shareBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:letterSpacing="0.02"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_gravity="right"
                android:background="@drawable/button_bg"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner"
                android:backgroundTint="@color/white">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/commentTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="20dp"
                    app:tabGravity="center"
                    app:tabIndicatorColor="@color/black"
                    app:tabIndicatorFullWidth="false"
                    app:tabIndicatorHeight="4dp"
                    app:tabMode="auto"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextColor="#9f9f9f">
                </com.google.android.material.tabs.TabLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/feed_type_bg"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:text="3"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commentRV"
                android:orientation="vertical"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/comment_background"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:id="@+id/commentSend"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/feed_type_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/commentBox"
                    app:layout_constraintTop_toTopOf="parent"
                    android:backgroundTint="#434343"
                    android:src="@drawable/baseline_send_24"
                    android:layout_weight="0.5"/>
                <EditText
                    android:id="@+id/commentBox"
                    android:layout_width="270dp"
                    style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                    android:layout_weight="4.5"
                    android:layout_marginStart="5dp"
                    android:hint="Your comment here... "
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColorHint="#9F9F9F"
                    app:layout_constraintEnd_toStartOf="@id/commentSend"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="20sp"
                    android:textColor="#9F9F9F"
                    android:layout_height="wrap_content"/>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>